{
  "include": [
    "app/**/*",
    "public/**/*",
    "*.config.ts",
    "*.config.js",
    ".react-router/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "archive",
    "logs",
    ".ai"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
