# Netlify Integration
# Get your token from: https://app.netlify.com/user/applications/personal
NETLIFY_AUTH_TOKEN=

# Optional: Site ID (auto-detected if linked)
# NETLIFY_SITE_ID=your-site-id

# Development
NODE_ENV=development

# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# For server-side operations (Netlify Functions)
SUPABASE_SERVICE_ROLE_KEY=

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# Authentication Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_MAX_ATTEMPTS=5
SESSION_DURATION_DAYS=7
SESSION_DURATION_REMEMBER_ME_DAYS=30
MAGIC_LINK_EXPIRY_MINUTES=10

# Monitoring (Optional - for future phases)
# NEXT_PUBLIC_SENTRY_DSN=

# Add other environment variables as needed
# API_URL=
# DATABASE_URL=